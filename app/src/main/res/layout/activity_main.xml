<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.diyanfang.inclassassignment06_yanfangd.MainActivity">


    <EditText
        android:id="@+id/animalName_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:hint="Animal Name"
        />

    <EditText
        android:id="@+id/legs_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:hint="Legs"/>

    <CheckBox
        android:id="@+id/hasFur_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Has Fur?"
        android:layout_marginLeft="18dp"
        />

    <EditText
        android:id="@+id/moreInfo_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:hint="More Information"/>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Submit"
        android:onClick="submitAnimal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Animal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:onClick="addAnother"/>

</LinearLayout>
